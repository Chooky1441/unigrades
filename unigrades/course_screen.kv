#:import utils utils

<CourseScreen>:
    name: 'course_screen'
    _name: text_name.text
    _units: text_units.text
    _a: text_a.text
    _aminus: text_aminus.text
    _bplus: text_bplus.text
    _b: text_b.text
    _bminus: text_bminus.text
    _cplus: text_cplus.text
    _c: text_c.text
    _cminus: text_cminus.text
    _dplus: text_dplus.text
    _d: text_d.text
    _dminus: text_dminus.text

    _p_np: checkbox_pnp.active


    BoxLayout:
        name: 'root_box'
        orientation: 'vertical'

        BoxLayout:

            name: 'toolbar'
            orientation: 'horizontal'
            size_hint_y: 0.1

            canvas:
                Color:
                    rgba: utils.DG, utils.DG, utils.DG, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            Button:
                size_hint_x: 0.1
                on_release: root.back()
                background_color: 0, 0, 0, 0
                Image:
                    size: self.parent.size
                    pos: self.parent.pos
                    source: 'res/back_arrow.png'

            Label:
                text: 'Course Editor'
                font_size: self.height * 0.5

            Button:
                size_hint_x: 0.1
                on_release: root.create()
                background_color: 0, 0, 0, 0
                Image:
                    size: self.parent.size
                    pos: self.parent.pos
                    source: 'res/enter.png'
        ScrollView:
            size: self.size
            canvas.before:
                Color:
                    rgba: utils.G, utils.G, utils.G, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            BoxLayout:
                id: course_box
                size_hint_y: None
                orientation: 'vertical'
                height: utils.DEFAULT_WIDGET_HEIGHT * 14

                Label:
                    text: 'Name'
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    size_hint: (0.9, 0.1)
                    font_size: self.height * 0.3
                    pos_hint: {'center_x': 0.5}
                TextInput:
                    id: text_name
                    text: root._name
                    multiline: False
                    size_hint: (0.9, 0.063)
                    pos_hint: {'center_x': 0.5}

                Label:
                    text: 'Units'
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    size_hint: (0.9, 0.1)
                    font_size: self.height * 0.3
                    pos_hint: {'center_x': 0.5}
                TextInput:
                    id: text_units
                    text: root._units
                    multiline: False
                    size_hint: (0.9, 0.063)
                    pos_hint: {'center_x': 0.5}

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: 0.1
                    Widget:
                        size_hint_x: 0.1
                    Label:
                        text: 'Pass-No-Pass'
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
                        size_hint: (0.9, 1)
                        font_size: self.height * 0.3
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    CheckBox:
                        id: checkbox_pnp
                        pos_hint: {'center_x': 0.5}

                    Widget:
                        size_hint_x: 0.1


                Label:
                    text: 'Grade Cuttoff Points'
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    size_hint: (0.9, 0.1)
                    font_size: self.height * 0.3
                    pos_hint: {'center_x': 0.5}

                BoxLayout:
                    orientation: 'horizontal'
